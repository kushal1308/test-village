          <div class="card-information text-align-center {{ card_product.handle }}">
            {%- if show_vendor -%}
              <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
              <div class="caption-with-letter-spacing light">{{ card_product.vendor }}</div>
            {%- endif -%}

            <span class="caption-large light">{{ block.settings.description | escape }}</span>
            <!-- color start -->
            {%- for option in card_product.options_with_values -%}
              {%- if option.name contains 'Color' or option.name contains 'Couleur' -%}
                <div
                  class="no-js-hidden price_product_detail m-0px"
                  id="price-{{ section.id }}"
                  role="status"
                  {{ block.shopify_attributes }}
                >
                  {%- assign price_class = 'price--large new_price_color' -%}

                  {%- assign on_sale = false -%}
                  {%- for variant in card_product.variants -%}
                    {%- if variant.compare_at_price > variant.price -%}
                      {%- assign on_sale = true -%}
                      {%- break -%}
                    {%- endif -%}
                  {%- endfor -%}

                  {%- if on_sale -%}
                    {%- assign price_class = price_class | append: ' with_sale' -%}
                  {%- endif -%}
                  {%- render 'price',
                    product: card_product,
                    use_variant: true,
                    show_badges: true,
                    price_class: price_class,
                    show_compare_at_price: true
                  -%}
                </div>

              {%- elsif option.name contains 'Size' -%}
                {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}
                <div class="m-0px-0px-10px-0px">
                  {%- if card_product.available == false -%}
                    <span
                      id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                      class="color-dark-black border-1px border-black font-weight-300 text-transform-uppercase bg-color-white border-radius-2px font-size-6em padding-4px-38px"
                    >
                      {{- 'products.product.sold_out' | t -}}
                    </span>
                  {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
                    {% assign compare_price = card_product.selected_or_first_available_variant.compare_at_price
                      | times: 1.0
                    %}
                    {% for variant in card_product.variants %}
                      {% if variant.compare_at_price != blank %}
                        {% assign compare_price = variant.compare_at_price | times: 1.0 %}
                        {% assign current_price = variant.price | times: 1.0 %}
                        {% break %}
                      {% endif %}
                    {% endfor %}

                    {% assign saving = compare_price | minus: current_price %}
                    {% assign percentage_saving = saving | times: 100.0 | divided_by: compare_price %}

                    {% assign decimal_part = percentage_saving | modulo: 1 %}

                    {% if decimal_part >= 0.5 %}
                      {% assign rounded_saving = percentage_saving | ceil %}
                    {% else %}
                      {% assign rounded_saving = percentage_saving | floor %}
                    {% endif %}

                    {% comment %}    {% assign saving = card_product.compare_at_price | minus: card_product.price | times: 100 | divided_by: card_product.compare_at_price | round %} {% endcomment %}

                    <span
                      id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                      class="sale font-weight-300 text-transform-uppercase font-family-Neuzeit border-radius-2px font-size-6em padding-4px-38px"
                    >
                      {{ 'products.product.on_sale' | t }} | {{ rounded_saving }}% OFF
                    </span>
                  {%- endif -%}
                </div>

              {% else %}
                {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}
                <div class="m-0px-0px-10px-0px">
                  {%- if card_product.available == false -%}
                    <span
                      id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                      class="color-dark-black border-1px border-black font-weight-300 text-transform-uppercase bg-color-white border-radius-2px font-size-6em padding-4px-38px"
                    >
                      {{- 'products.product.sold_out' | t -}}
                    </span>
                  {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
                    {% assign compare_price = card_product.selected_or_first_available_variant.compare_at_price
                      | times: 1.0
                    %}
                    {% for variant in card_product.variants %}
                      {% if variant.compare_at_price != blank %}
                        {% assign compare_price = variant.compare_at_price | times: 1.0 %}
                        {% assign current_price = variant.price | times: 1.0 %}
                        {% break %}
                      {% endif %}
                    {% endfor %}

                    {% assign saving = compare_price | minus: current_price %}
                    {% assign percentage_saving = saving | times: 100.0 | divided_by: compare_price %}

                    {% assign decimal_part = percentage_saving | modulo: 1 %}

                    {% if decimal_part >= 0.5 %}
                      {% assign rounded_saving = percentage_saving | ceil %}
                    {% else %}
                      {% assign rounded_saving = percentage_saving | floor %}
                    {% endif %}

                    {% comment %}    {% assign saving = card_product.compare_at_price | minus: card_product.price | times: 100 | divided_by: card_product.compare_at_price | round %} {% endcomment %}

                    <span
                      id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                      class="sale font-weight-300 text-transform-uppercase font-family-Neuzeit border-radius-2px font-size-6em padding-4px-38px"
                    >
                      {{ 'products.product.on_sale' | t }} | {{ rounded_saving }}% OFF
                    </span>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}

            {% if show_rating %}
              {% capture the_snippet_review_avg %}
  {% render 'ssw-widget-avg-rate-listing', product: card_product %}
  {% endcapture %}
              {% unless the_snippet_review_avg contains 'Liquid error' %}
                {{ the_snippet_review_avg }}
              {% endunless %}
            {%- endif -%}

            {%- if card_product.quantity_price_breaks_configured? -%}
              <div class="card__information-volume-pricing-note">
                <span class="caption">{{ 'products.product.volume_pricing.note' | t }}</span>
              </div>
            {%- endif -%}
          </div>
